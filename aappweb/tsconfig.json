{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "types": ["greensock", "node"],
    "lib": ["es2017", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@admin/*": ["app/modules/admin/*"],
      "@members/*": ["app/modules/members/*"],
      "@public/*": ["app/modules/public/*"],
      "@conf/*": ["app/modules/conf/*"]
    }
  }
}
